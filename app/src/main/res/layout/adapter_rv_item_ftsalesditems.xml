<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_view_bg">
<!--    tools:showIn="@layout/activiy_template2">-->

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="6dp">

        <TextView
            android:id="@+id/txt_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/rv_item_circle_black"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            tools:text="F" />

        <TextView
            android:id="@+id/txt_pname"
            android:singleLine="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txt_icon"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@id/txt_icon"
            android:textColor="@color/darkerGray"
            android:textSize="13sp"
            tools:text="Carnation Merah Jambu 4X24gr" />

        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_pname"
            android:layout_alignStart="@id/txt_pname"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_qty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="27"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="13dp"
                tools:text="3Dus 6Pcs" />

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="12dp"
                tools:text="7.5000" />
            <TextView
                android:id="@+id/txt_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="22"
                android:ellipsize="marquee"
                android:gravity="right"
                android:singleLine="true"
                android:textColor="@color/blue"
                android:textSize="14sp"
                tools:text="Rp. 9000.000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_bottom"
            android:layout_alignStart="@id/layout_bottom"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="15dp"
            android:orientation="horizontal">


        </LinearLayout>





        <ImageView
            android:id="@+id/img_star"
            android:layout_width="20dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_baseline_check_24"
            app:tint="@color/blue"
            tools:ignore="ContentDescription" />

    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>